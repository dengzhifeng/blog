{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:mysite": "npm run replace:mysite && hexo generate",
    "build": "npm run replace:git && hexo generate",
    "clean": "hexo clean",
    "deploy": "npm run clean && npm run build && hexo deploy",
    "server": "hexo server",
    "push": "command-cli push",
    "replace:git": "command-cli replace-file --oldFile _config.yml --newFile _config_github.yml ",
    "replace:mysite": "command-cli replace-file --oldFile _config.yml --newFile _config_mysite.yml ",
    "merge-branch": "command-cli merge-branch --targetBranch dev  --mainBranch master",
    "push-merge": "command-cli push-merge --targetBranch dev  --mainBranch master"
  },
  "hexo": {
    "version": "4.2.0"
  },
  "dependencies": {
    "hexo": "^4.0.0",
    "hexo-deployer-git": "^2.1.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^1.0.0",
    "hexo-generator-json-content": "^4.2.3",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-marked": "^2.0.0",
    "hexo-renderer-stylus": "^1.1.0",
    "hexo-server": "^1.0.0",
    "hexo-wordcount": "^6.0.1"
  }
}
